<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/shannonImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/shannon"
                android:onClick="showShannon"/>

            <TextView
                android:id="@+id/shannonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shannon_story" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/shockleyImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/shockley"
                android:onClick="showShockley"/>

            <TextView
                android:id="@+id/shockleyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shockley_story" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/guidoImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/guido"
                android:onClick="showGuido"/>

            <TextView
                android:id="@+id/guidoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guido_story" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>